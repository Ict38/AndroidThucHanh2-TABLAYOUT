<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Tên Sách:"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/hardtext1"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hardtext1"
        android:id="@+id/edName"
        android:hint="TEN CUA QUYEN SACH"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Tác giả:"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/hardtext1"
        android:id="@+id/hardtext2"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hardtext2"
        android:layout_below="@id/hardtext1"
        android:layout_marginTop="10dp"
        android:id="@+id/spAuthor"
        android:text="Tran Dinh Que"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Phạm vi:"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/hardtext2"
        android:id="@+id/hardtext3"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_toRightOf="@id/hardtext3"
        android:orientation="horizontal"
        android:layout_below="@id/hardtext2">
        <RadioButton
            android:id="@+id/hoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:text="Học"
            android:enabled="true"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/tracuu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:text="Tra Cứu"
            android:enabled="true"
            />
    </RadioGroup>


    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Đối tượng:"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/hardtext3"
        android:id="@+id/hardtext4"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox1"
        android:layout_marginTop="-20dp"
        android:text="CN"
        android:enabled="true"
        android:layout_toRightOf="@id/hardtext4"
        android:layout_below="@id/radioGroup"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox2"
        android:layout_marginTop="-20dp"
        android:text="DT"
        android:enabled="true"
        android:layout_toRightOf="@id/checkbox1"
        android:layout_below="@id/radioGroup"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox3"
        android:layout_marginTop="-20dp"
        android:text="VT"
        android:enabled="true"
        android:layout_toRightOf="@id/checkbox2"
        android:layout_below="@id/radioGroup"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Đánh giá:"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/hardtext4"
        android:id="@+id/hardtext5"
        />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:layout_below="@id/hardtext4"
        android:layout_toRightOf="@id/hardtext5"
        android:layout_marginLeft="-60dp"
        android:scaleX="0.6"
        android:scaleY="0.8"
        android:enabled="true"
        android:rating="4"
        android:numStars="5"
        android:stepSize="1"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnUpdate"
            android:text="Lưu"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/btnXoa"
            android:text="Xóa"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/btnHuy"
            android:text="Hủy"
            />
    </LinearLayout>
</RelativeLayout>